<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_margin="@dimen/size_small"
	app:cardBackgroundColor="@color/colorWhite"
	app:cardCornerRadius="@dimen/size_small"
	app:cardElevation="@dimen/size_xsmall">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/percentTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/size_medium"
			android:text="@string/input_selector_view_percent"
			android:textSize="@dimen/textsize_xxlarge" />

		<TextView
			android:id="@+id/currencyTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@dimen/size_medium"
			android:text="@string/input_selector_view_currency"
			android:textSize="@dimen/textsize_xxlarge" />

	</LinearLayout>

</android.support.v7.widget.CardView>